<resources>
    <!-- Base Light Theme -->
    <style name="Theme.AndroidLogin.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Window Background -->
        <item name="android:windowBackground">@drawable/home_page</item>

        <!-- Custom Attributes -->
        <item name="chatBackground">@drawable/rectangle_border</item>
        <item name="historyBackground">@drawable/history_border</item>
        <item name="frameBackground">@drawable/frame_background</item>
        <item name="spinnerBackground">@color/white</item>
        <item name="landscapeBackground">@drawable/home_page_landscape</item>

        <item name="titleColor">@color/brown</item>
        <item name="chatTextColor">@color/navyBlue</item>
        <item name="historyTextColor">@color/navyBlue</item>
        <item name="settingTextColor">@color/pink</item>
        <item name="defaultTextColor">@color/black</item>

        <item name="chatCloseIcon">@drawable/ic_exit</item>
        <item name="chatBackIcon">@drawable/ic_back_arrow</item>
        <item name="lockIcon">@drawable/locked</item>
        <item name="editIcon">@drawable/edit_username</item>
        <item name="addChannelIcon">@drawable/add_channels</item>
        <item name="searchChannelIcon">@drawable/search_channel_list</item>
        <item name="editChannelIcon">@drawable/edit_channels</item>
        <item name="logo">@drawable/logo</item>

        <item name="logoutButtonBackground">@drawable/rounded_logout_button</item>
        <item name="joinGameButtonBackground">@drawable/rounded_orange_button</item>
        <item name="createGameButtonBackground">@drawable/rounded_blue_button</item>
        <item name="buttonWidth">450dp</item>
        <item name="buttonHeight">100dp</item>
        <item name="buttonTextSize">35sp</item>
        <item name="settingSpinnerBackground">@drawable/spinner_background_with_arrow</item>
        <item name="generalButtonBG">@color/teal_700</item>

        <item name="channelButtonsStyle">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

