<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/matchItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accessCodeTextView"
                android:textColor="?attr/defaultTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="0000"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/quizLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/surveyIcon"
                    android:background="?attr/channelButtonsStyle"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/survey_icon_desc"
                    android:src="@drawable/survey" />

                <TextView
                    android:id="@+id/quizNameTextView"
                    android:textColor="?attr/defaultTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="La programmation WEB"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playersLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playersIcon"
                    android:background="?attr/channelButtonsStyle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/players_icon_desc"
                    android:src="@drawable/players" />

                <TextView
                    android:id="@+id/playersCountTextView"
                    android:textColor="?attr/defaultTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="0"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dollarSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/feeTextView"
                    android:textColor="?attr/defaultTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="0"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/lockIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/unlocked"
                    android:contentDescription="lock icon"
                    android:background="?attr/channelButtonsStyle"
                    android:layout_marginRight="20dp"/>
    </LinearLayout>
</LinearLayout>
