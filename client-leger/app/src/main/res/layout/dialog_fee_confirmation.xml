<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feeConfirmationRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/chatBackground">


    <LinearLayout
        android:id="@+id/banWarningLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/banIconImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ban_icon"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/banMessageTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/defaultTextColor"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- Icon and Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cookieIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cookies"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/feeMessageTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/defaultTextColor"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:padding="10dp"
            android:background="@drawable/rounded_logout_button"
            android:textColor="@android:color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:padding="10dp"
            android:background="@drawable/rounded_green_button"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>
