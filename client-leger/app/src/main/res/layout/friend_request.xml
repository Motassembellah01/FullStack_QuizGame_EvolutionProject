<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/friend_item"
    android:layout_marginBottom="8dp"
    android:padding="15dp">

    <ImageView
        android:id="@+id/friendAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/avatar_border"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/friendName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:fontFamily="@font/quicksand_bold"
        android:layout_weight="1"
        android:text="test"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>

    <!-- Accept Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acceptFriendButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="@string/accept"
        android:textSize="16sp"
        android:padding="8dp"
        android:backgroundTint="@color/lightGreen"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/white"/>

    <!-- Decline Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/declineFriendButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="@string/decline"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_bold"
        android:backgroundTint="@color/t_red"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/blockRequester"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ban_icon"
        android:layout_marginStart="8dp" />
</LinearLayout>
