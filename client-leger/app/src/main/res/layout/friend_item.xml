<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/friend_item"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/friendAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/avatar_border"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/friendName"
        android:fontFamily="@font/quicksand_bold"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Friend Name"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center_vertical" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/removeFriendButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="@string/removeFriend"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_bold"
        android:padding="8dp"
        android:backgroundTint="@color/lavender"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/blockFriend"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ban_icon"
        android:layout_marginStart="8dp" />
</LinearLayout>
