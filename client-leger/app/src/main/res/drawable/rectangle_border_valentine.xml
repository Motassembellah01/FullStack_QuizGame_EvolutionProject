<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFC0CB"/> <!-- Set the background color here -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#c84a4e" /> <!-- Border color -->

    <!-- Optional: Add padding inside the border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional: Set corner radius for rounded corners -->
    <corners android:radius="8dp" />
</shape>
