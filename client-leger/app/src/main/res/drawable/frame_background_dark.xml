<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color of the Frame (Optional) -->
    <solid android:color="@android:color/transparent" />

    <!-- Border Properties -->
    <stroke
        android:width="4dp"
        android:color="@color/white" /> <!-- Define frame_color in colors.xml -->

    <!-- Rounded Corners (Optional) -->
    <corners android:radius="16dp" />

    <!-- Padding Inside the Frame (Optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
